<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="RailReader2.Views.TextNoteDialog"
        Title="Text Note"
        Width="320" Height="200"
        WindowStartupLocation="CenterOwner"
        CanResize="False">
    <DockPanel Margin="16">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal"
                    HorizontalAlignment="Right" Spacing="8" Margin="0,12,0,0">
            <Button Content="OK" Width="80" Click="OnOkClick" />
            <Button Content="Cancel" Width="80" Click="OnCancelClick" />
        </StackPanel>
        <TextBox x:Name="NoteTextBox"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 Watermark="Enter note text..." />
    </DockPanel>
</Window>
